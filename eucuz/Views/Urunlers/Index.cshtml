                @Html.DisplayNameFor(model => model.birim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.olcut)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.urun_Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.urun_Kodu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.urun_fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resim)
