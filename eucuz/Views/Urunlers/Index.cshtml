@model IEnumerable<eucuz.Models.Urunler>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.urun_Adi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.urun_Kodu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.urun_fiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aciklama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.indirim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kategori_Id)
            </th>
