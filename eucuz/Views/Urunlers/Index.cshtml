                @Html.DisplayFor(modelItem => item.kategori_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.birim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.olcut)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.urun_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.urun_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.urun_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
